<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoneyManager.Models"
             xmlns:viewModels="clr-namespace:MoneyManager.ViewModels"
             xmlns:converters="clr-namespace:MoneyManager.Converters"
             x:Class="MoneyManager.Views.AllTransactionsPage"
             x:DataType="viewModels:AllTransactionsViewModel"
             x:Name="Page"
             Title="取引一覧">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:TransactionTypeToStringConverter x:Key="TransactionTypeToStringConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <!-- コマンドボタン -->
        <HorizontalStackLayout HorizontalOptions="End">
            <Button Text="資産"/>
            <Button Text="追加"
                    Command="{Binding GoToEditTransactionCommand}"/>
        </HorizontalStackLayout>

        <!-- 取引リスト -->
        <CollectionView ItemsSource="{Binding Transactions}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Transaction">
                    <SwipeView
                        Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding Date, StringFormat='{0:d日(ddd)}'}"/>
                            <Label Grid.Row="0"
                                   Grid.Column="1">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding FromAccount.Name}"/>
                                        <Span Text=" → "/>
                                        <Span Text="{Binding ToAccount.Name}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label Grid.Row="0"
                                   Grid.Column="2"
                                   Text="{Binding Category.Name}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding Type, Converter={StaticResource TransactionTypeToStringConverter}}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding Note}"/>
                            <Label Grid.Row="1"
                                   Grid.Column="2"
                                   Text="{Binding Amount, StringFormat='{0:C}'}"/>
                        </Grid>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="変更"
                                           BackgroundColor="DarkBlue"
                                           Command="{Binding BindingContext.GoToEditTransactionCommand, Source={x:Reference Page}}"
                                           CommandParameter="{Binding Id}"/>
                                <SwipeItem Text="削除"
                                           BackgroundColor="DarkRed"
                                           Command="{Binding BindingContext.DeleteTransactionCommand, Source={x:Reference Page}}"
                                           CommandParameter="{Binding}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
